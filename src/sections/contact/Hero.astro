---
// COMPONENTS //
import ToolBadge from "@/components/ToolBadge.astro";
import { Image } from "astro:assets";

// IMAGES //
import HeroImage from "@/assets/images/contact/hero-tile.png";

// SVG's //
import Ball from "@/assets/3d-ball.svg";
---

<!-- Hero Section for Contact Page -->
<section>
  <div
    id="hero-wrapper"
    class="relative container m-auto flex flex-col items-center gap-5 px-6 py-28 text-center md:gap-3.5 md:px-4 md:py-40 lg:gap-4 lg:pt-72 lg:pb-60"
  >
    <!-- Top-left floating marble -->
    <Image
      id="big-marble"
      src={Ball}
      alt="Big Marble"
      class="absolute top-[22%] left-6 z-0 w-9 sm:left-[20%] md:top-[380px] md:left-[50px] md:w-16 lg:top-[65%] lg:left-[16%] lg:w-20 2xl:left-[20%]"
    />
    <!-- Bottom-right floating marble -->

    <Image
      id="small-marble"
      src={Ball}
      alt="Small Marble"
      class="absolute right-[10%] bottom-[46%] z-0 w-5 rotate-[-20deg] sm:right-[26%] md:right-[200px] md:bottom-40 md:w-11 lg:right-[35%] 2xl:bottom-[14%]"
      style="animation-duration: 4s"
    />

    <!-- ToolBadge -->
    <ToolBadge icon="comment" text="Want to know more?" />

    <!-- Title content -->
    <div class="text-n-950 relative z-10">
      <!-- Top line -->
      <div class="flex items-center justify-center md:gap-9">
        <!-- Bold Title -->
        <h1 class="text-4xl leading-tight font-semibold md:text-7xl lg:text-8xl">Get in touch</h1>
        <!-- Image -->

        <Image
          class="hidden w-36 md:block lg:w-48"
          width={192}
          height={192}
          src={HeroImage}
          alt="decorative illustration"
        />
      </div>
      <h2 class="text-4xl leading-tight md:text-7xl lg:text-8xl">We're just a message away.</h2>
    </div>

    <!-- Bottom content -->

    <div class="relative z-10">
      <div class="flex flex-col gap-5 md:gap-3.5 lg:gap-4">
        <p
          class="bg-gradient-to-r from-[#6654D4] to-[#8B77F3] bg-clip-text text-sm leading-tight font-medium text-transparent md:text-xl lg:text-2xl"
        >
          Let's create something amazing together.
        </p>
      </div>
    </div>
  </div>
</section>
<script>
  import { animateHeroTitle, animateMarble } from "@/scripts/hero";

  animateHeroTitle();
  animateMarble("big-marble", "hero-wrapper");
  animateMarble("small-marble", "hero-wrapper");
</script>

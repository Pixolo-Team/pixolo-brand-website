---
/**
 * Hero.astro
 * -----------------------------------
 * Uses array-based structure for text segments.
 * Follows Pixoloâ€™s coding + naming conventions.
 * Color: Auto adapts (text-n-950 for light, text-n-50 for dark)
 */

const ballPrimarySrc = "/3d-ball-1.svg";
const ballSecondarySrc = "/3d-ball-1.svg";
const codeIconSrc = "/3d-code-icon.svg";

const heroHeading = [
  [
    { text: "Weâ€™re the ", bold: false },
    { text: "Geeks", bold: true },
  ],
  [
    { text: "behind your", bold: false },
    { icon: codeIconSrc },
    { text: "next", bold: false },
  ],
  [
    { text: "Big Tech Story.", bold: true },
  ],
];

const heroSubText = "Smart builds. Good vibes. Great stories.";
---

<!-- ðŸŒŒ Hero Section Start -->
<section class="relative flex flex-col items-center justify-center min-h-[474px] w-full overflow-hidden text-center">

  <!-- ðŸŸ£ 3D Decorative Balls -->
  <img
    src={ballPrimarySrc}
    alt="3d ball primary"
    class="absolute top-[20px] left-[20px] w-[34.1px] h-[34.1px] rotate-[22deg]"
  />

  <img
    src={ballSecondarySrc}
    alt="3d ball secondary"
    class="absolute bottom-[60px] right-[20px] w-[18.94px] h-[18.94px] rotate-[22.29deg]"
  />

  <!-- ðŸ§© Hero Text Wrapper -->
  <div class="flex flex-col items-center justify-center w-[327px] gap-[12px]">

    {heroHeading.map((line) => (
      <p class="text-3xl font-normal leading-tight tracking-[-0.02em] text-n-50 dark:text-n-950 flex items-center justify-center gap-[8px]">
        {line.map((part) => (
          part.icon ? (
            <img
              src={part.icon}
              alt="3d-code-icon"
              class="inline-block w-[36.2px] h-[36.2px] align-middle"
            />
          ) : (
            <span class={part.bold ? "font-bold" : ""}>{part.text}</span>
          )
        ))}
      </p>
    ))}

    <!-- ðŸŒˆ Subtext -->
    <p class="text-sm font-medium leading-loose text-center bg-gradient-to-r from-[#6654D4] to-[#8B77F3] bg-clip-text text-transparent">
      {heroSubText}
    </p>
  </div>
</section>
<!--  Hero Section End -->

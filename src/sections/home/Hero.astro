---
// COMPONENTS //
import { Image } from "astro:assets";

// SVG's //
import Ball from "@/assets/3d-ball.svg";
import TagIcon from "@/assets/3d-tag.svg";

const heroDetails = {
  balls: "/3d-ball-1.svg",
  icon: "/3d-code-icon.svg",
  title: ["We’re the", "Geeks", "behind your", "next", "Big Tech Story."],
  subText: "Smart builds. Good vibes. Great stories.",
};
---

<!-- Hero Section Start -->
<section>
  <div
    class="container relative flex flex-col items-center justify-center px-6 py-36 gap-9 overflow-hidden text-center md:py-40 mx-auto lg:pt-72 lg:pb-60"
  >
    <!-- Top-left floating 3D ball -->
    <Image
      src={Ball}
      alt="3d ball primary"
      class="floating-icon absolute top-[20%] sm:left-[20%] left-6 w-9 md:w-16 md:top-[380px] md:left-[50px] lg:w-20 lg:top-[65%] lg:left-[16%] 2xl:left-[20%]"
      style="animation-duration: 5s"
    />
    <!-- Bottom-right floating 3D ball (rotated) -->
    <Image
      src={Ball}
      alt="3d ball secondary"
      class="floating-icon absolute bottom-[46%] right-[10%] sm:right-[26%] w-5 md:w-11 rotate-[-20deg] md:right-[200px] md:bottom-40 lg:right-[35%]"
      style="animation-duration: 4s"
    />

    <!-- Hero Text Wrapper -->
    <div
      class="flex flex-col items-center justify-center gap-3 md:gap-0 xl:w-full"
    >
      <!--  Line 1: “We’re the Geeks” -->
      <p
        class="text-3xl font-normal leading-none tracking-[-2%] text-n-950 md:text-7xl xl:text-8xl"
      >
        {heroDetails.title[0]}

        <span class="font-bold">{heroDetails.title[1]}</span>
      </p>

      <!--  Line 2: “behind your” -->
      <p
        class="text-3xl font-normal leading-tight tracking-[-2%] text-n-950 text-center flex justify-center items-center md:text-7xl text-nowrap xl:text-8xl"
      >
        <!-- Line 3: "next" -->
        <span>{heroDetails.title[2]}</span>

        <!-- Tag icon -->
        <Image
          src={TagIcon}
          alt="3d-code-icon"
          class="floating-icon inline-block w-14 align-middle md:w-44 xl:w-60"
          style={"animation-duration: 5s"}
        />
        <span>{heroDetails.title[3]}</span>
      </p>

      <!--  Line 4: “Big Tech Story.” -->
      <p
        class="text-3xl font-semibold leading-none tracking-[-0.02em] text-n-950 md:text-7xl xl:text-8xl"
      >
        {heroDetails.title[4]}
      </p>
    </div>
    <!-- Subtext -->
    <p
      class="text-sm font-medium z-10 leading-loose text-center bg-linear-to-r from-[#6654D4] to-[#8B77F3] bg-clip-text text-transparent md:text-xl xl:text-2xl"
    >
      {heroDetails.subText}
    </p>
  </div>
</section>
<style>
  @keyframes float {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-12px);
    }
    100% {
      transform: translateY(0);
    }
  }

  .floating-icon {
    animation: float 6s ease-in-out infinite;
    will-change: transform;
  }
</style>

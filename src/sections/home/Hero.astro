---
const ballPrimarySrc = "/3d-ball-1.svg";
const ballSecondarySrc = "/3d-ball-1.svg";
const iconCode = "/3d-code-icon.svg";

const heroTitle = [
  "Weâ€™re the",
  "Geeks",
  "behind your",
  "next",
  "Big Tech Story.",
];

const heroSubText = "Smart builds. Good vibes. Great stories.";
---

<!-- Hero Section Start -->
<section
  class="relative flex flex-col items-center justify-center w-full min-h-[474px] max-w-container-md px-6 pt-36 pb-36 gap-9 overflow-hidden text-center "
>
  <!-- Decorative 3D Balls -->
  <img
    src={ballPrimarySrc}
    alt="3d ball primary"
    class="absolute top-[20px] left-[20px] w-[56px] h-[34.1px] rotate-[22deg]"
  />

  <img
    src={ballSecondarySrc}
    alt="3d ball secondary"
    class="absolute bottom-[60px] right-[20px] w-[56px] h-[18.94px] rotate-[22.29deg]"
  />

  <!-- Hero Text Wrapper -->
  <div class="flex flex-col items-center justify-center gap-[12px]">
    
    <!-- Line 1 -->
    <p class="text-3xl font-normal leading-none tracking-[-0.02em] text-n-50">
      {heroTitle[0]} <span class="font-bold">{heroTitle[1]}</span>
    </p>

    <!-- Line 2 -->
    <p class="text-3xl font-normal leading-[125%] tracking-[-0.02em] text-n-50 text-center flex justify-center items-center "
 >
<span>{heroTitle[2]}</span>
      <img
        src={iconCode}
        alt="3d-code-icon"
        class="inline-block w-[56px] h-[36.2px] align-middle"
      />
      <span>{heroTitle[3]}</span>
    </p>

    <!-- Line 3 -->
    <p class="text-3xl font-bold leading-none tracking-[-0.02em] text-n-50">
      {heroTitle[4]}
    </p>

    <!-- Subtext -->
    <p
      class="text-sm font-medium leading-loose text-center bg-gradient-to-r from-[#6654D4] to-[#8B77F3] bg-clip-text text-transparent"
    >
      {heroSubText}
    </p>
  </div>
</section>
<!-- Hero Section End -->

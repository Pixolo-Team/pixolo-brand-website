---
const heroOverline = "We're the Geeks";
const heroTitle = "Big Tech Story.";
const heroSub = "Smart builds. Good vibes. Great stories.";
const ball1Src = "public/3dBall-Image.png"; 
const ball2Src = "public/3dBall-Image.png"; 
---

<!-- Hero section start -->
<section>
	<!-- Decorative 3D shapes container -->
	<!-- 3d-ball-2 -->
	<img src={ball2Src} alt="3d ball 2">
	<!-- 3d-ball-1 -->
	<img src={ball1Src} alt="3d ball 1">
	<!-- hero-text-wrap -->
	<div>
		<!-- Overline / small intro text -->
		<p>{heroOverline}</p>
		<!-- Main headline -->
		<p>{heroTitle}</p>
		<!-- Subtext paragraph -->
		<p>{heroSub}</p>
	</div>
</section>
<!-- Hero section end -->


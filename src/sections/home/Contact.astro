---

<section>
    <div class="container mx-auto flex flex-col gap-11 px-6 py-16">
        <!-- Section Header -->
        <div class="flex flex-col items-center gap-6">

            <!-- Tool Badge component -->
            <ToolBadge title="Collaborate with Pixolo"  />

            <!-- Header Content -->
            <div class="flex flex-col gap-3.5 text-center">

---
// External libraries
import { Icon } from "astro-icon/components";

// Project Components
import BlogCard from "@/components/blogs/BlogCard.astro";

// Project Data
import { blogSectionDetails } from "@/data/blogs";
import { blogItems } from "@/data/blogs";
---

<!-- Blogs Section -->
<section>
  <div
    class="bg-n-50 container mx-auto flex flex-col gap-16 px-6 py-20 md:gap-20 md:py-28 lg:gap-24"
  >
    <div class="flex flex-col items-start gap-4 md:gap-5 lg:gap-6">
      <div
        class="border-n-950 flex items-center gap-2.5 rounded-3xl border py-2 pr-4 pl-2 md:gap-3 lg:gap-4"
      >
        <!-- Comment Icon -->
        <div
          class="flex h-7 w-7 items-center justify-center gap-2.5 rounded-3xl bg-blue-500 p-2 md:h-8 md:w-8 lg:h-10 lg:w-10"
        >
          <Icon name="comment" class="h-7 w-7" />
        </div>

        <!-- Labels -->
        <p
          class="text-n-900 self-center text-center text-xs leading-none font-medium tracking-normal md:text-base lg:text-lg"
        >
          {blogSectionDetails.label}
        </p>
      </div>

      <!-- Heading -->
      <p
        class="text-n-950 text-2xl leading-tight font-normal tracking-tighter md:text-4xl lg:text-6xl"
      >
        {blogSectionDetails.heading}
      </p>
    </div>

    <!-- Blog Cards and Add More Button -->
    <div class="flex flex-col items-center gap-16">
      <!-- Blog Cards Wrapper -->
      <div class="grid w-full grid-cols-1 gap-12 md:grid-cols-2 md:gap-7 lg:grid-cols-3 lg:gap-12">
        <!-- Blog Cards -->
        {
          blogItems
            .slice(0, 3)
            .map((card) => (
              <BlogCard
                imageSrc={card.imageSrc}
                category={card.category}
                date={card.date}
                title={card.title}
                author={card.author}
                href={card.href}
              />
            ))
        }

        <!-- Tablet only: 4th card  -->
        <div class="hidden md:block lg:hidden">
          <BlogCard
            imageSrc={blogItems[3].imageSrc}
            category={blogItems[3].category}
            date={blogItems[3].date}
            title={blogItems[3].title}
            author={blogItems[3].author}
            href={blogItems[3].href}
          />
        </div>
      </div>

      <!-- Load More Button -->
      <button
        type="button"
        aria-label="Load more blog posts"
        class="border-n-500 text-n-950 flex cursor-pointer gap-1.5 rounded-4xl border px-6 py-3.5 text-sm md:px-8 lg:gap-2 lg:px-7 lg:py-4 lg:text-base"
        >{blogSectionDetails.loadMoreButton}</button
      >
    </div>
  </div>
</section>

---
const label = "Code & Culture";
const heading = "Stories and trends shaping how technology connects us.";
const loadMoreButton = "Load More Blogs";
---

<!-- Blogs Section -->
<section>
  <div class="bg-n-950 container gap-16 px-6 py-20">
    <div class="flex flex-col items-start gap-4">
      <div class="border-n-50 flex items-center gap-2.5 rounded-3xl border-1 py-2 pr-4 pl-2">
        <!-- Comment Icon -->
        <img src="/src/icons/comment.svg" alt="comment icon" class="h-7 w-7" />
        <!-- Labels -->
        <p class="text-n-100 text-center text-xs leading-none font-medium tracking-normal">
          {label}
        </p>
      </div>

      <!-- Heading -->
      <p class="text-n-50 text-xl leading-tight font-normal tracking-tighter">{heading}</p>
    </div>

    <!-- Blog Cards and Add More Button -->
    <div class="flex flex-col items-center gap-16">
      <!-- Blog Cards Wrapper -->
      <div class="flex flex-col gap-12">
        <!-- Blog Cards -->
      </div>

      <!-- Load More Button -->
      <button class="border-n-500 text-n-50 gap-1.5 rounded-4xl border px-6 py-3.5"
        >{loadMoreButton}</button
      >
    </div>
  </div>
</section>

---
// STYLES //
import "../styles/global.css";

// COMPONENTS //
import Navbar from "../components/Navbar.astro";
import WhatsappButton from "../components/WhatsappButton.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="color-scheme" content="light dark" />
    <link
      rel="icon"
      href="/favicon-light.png"
      media="(prefers-color-scheme: light)"
    />
    <!-- Favicon for dark mode -->
    <link
      rel="icon"
      href="/favicon-dark.png"
      media="(prefers-color-scheme: dark)"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Pixolo Technologies</title>
  </head>
  <body class="relative">
    <div class="fixed top-3 left-0 w-full z-50">
      <Navbar />
    </div>
    <slot />

    <!-- Whatsapp button component -->
    <WhatsappButton
      href="https://wa.me/9768941186"
      extraClasses="fixed bottom-5 right-5 md:bottom-10 md:right-20 z-50"
    />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Select all elements that should animate when visible
    const animatedElements = document.querySelectorAll(
      ".anim-fade-up-quick, .anim-fade-in-up, .anim-fade-in-right"
    );

    // Create a new Intersection Observer to detect when elements appear in the viewport
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          // Check if the element is currently visible in the viewport
          if (entry.isIntersecting) {
            // Add the visible class to trigger CSS animation
            entry.target.classList.add("anim-visible");

            // Stop observing the element after animation triggers once
            observer.unobserve(entry.target);
          }
        });
      },

      // Trigger the animation when 20% of the element is visible
      { threshold: 0.18 }
    );

    // Observe each selected element
    animatedElements.forEach((el) => observer.observe(el));
  });
</script>

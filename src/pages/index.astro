---
import Layout from "../layouts/Layout.astro";
import Hero from "../sections/home/Hero.astro";
---
<Hero />  
<Layout>
  <div class="bg-n-950">
   <!-- Background Star Video -->
    <video
      class="absolute top-0 left-0 w-full h-full object-cover"
      src="/videos/stars.mp4"
      autoplay
      muted
      loop
      playsinline
    />

	<!-- Background Circle Gradient -->
    <div
      class="fixed top-[30%] w-[885px] h-[885px] rounded-full left-1/2 -translate-x-1/2"
      style="background: linear-gradient(90deg, rgba(22, 125, 229, 0.36) 0%, rgba(95, 74, 200, 0.36) 92.31%);
filter: blur(250px);"
    />
  </div>

  <!-- Start adding sections from below  -->
    <div class="relative z-10">
      <p class="font-bold text-white">Hello</p>
    </div>
</Layout>

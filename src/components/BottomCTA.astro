---
import { Icon } from "astro-icon/components";

const { ctaText = "Tell us about your needs", svgName = "menu" } = Astro.props;
---

<button>
  <!-- CTA  -->
  <div
    class="w-fit flex items-center justify-center py-2 pr-2 pl-7 gap-3 rounded-4xl text-n-950 bg-n-800/20">
    <!-- CTA Text -->
    <p class="text-sm self-center font-medium text-n-950 leading-[100%] md:text-lg">{ctaText}</p>

    <!-- Icon -->
    <div
      class="w-12 h-12 bg-n-950 flex items-center justify-center rounded-full">
      <Icon name={svgName} />
    </div>
  </div>
</button>

---
const { ctaText, svgName } = Astro.props
const iconPath = `/icons/${svgName}.svg`
---
<div>

    <!-- CTA  -->
    <div class="w-fit flex items-center justify-center py-2 pr-2 pl-7 gap-3 rounded-4xl dark:text-neutral-50 dark:bg-neutral-800 text-neutral-800 bg-neutral-50">
        <!-- CTA Text -->
        <p class="text-lg font-medium">{ctaText}</p>

        <!-- Icon -->
        <div class="w-12 h-12 flex items-center justify-center rounded-[50px] bg-neutral-50 ">
            <img src={iconPath} alt=`${svgName} Icon` >
        </div> 
        
    </div>

</div>
---
// COMPONENTS //
import { Icon } from "astro-icon/components";
import Image from "astro/components/Image.astro";

const {
  employeeImage = "employee-image.jpg",
  employeeImageAlt = "Employee Image",
  employeeName = "Deven Bhagtani",
  employeePosition = "UX Designer",
  startingFrom = "Starting from",
  employeeSalary = "Rs.10,000",
  arrowIcon = "arrow-icon",
  experienceTitle = "Experience: ",
  experience = "4 Years",
} = Astro.props;
---

<div
  class="flex flex-col rounded-3xl pb-2 gap-2 bg-linear-to-r from-[#4254D4] to-[#8B77F3]">
  <!-- Employee Details -->
  <div class="bg-n-100 flex flex-col rounded-3xl p-5 gap-4">
    <!-- Employee Image -->
    <Image
      src={`/images/retainership/${employeeImage}`}
      alt={employeeImageAlt}
      width={287}
      height={193}
      class="rounded-2xl self-center w-full"
    />
    <!-- Employee Details -->
    <div class="flex flex-col gap-8">
      <!-- Name + Position -->
      <div class="flex flex-col gap-1">
        <!-- Employee Name -->
        <p class="text-n-950 text-xl font-bold leading-tight">{employeeName}</p>
        <!-- Employee Position -->
        <p class="text-n-700 text-sm font-medium leading-tight">
          {employeePosition}
        </p>
      </div>

      <!-- Price Wrapper -->
      <div class="flex justify-between items-center">
        <div class="flex flex-col">
          <p class="font-medium text-sm text-n-700 leading-tight">{startingFrom}</p>
          <p class="font-medium text-base text-n-700 leading-tight">{employeeSalary}</p>
        </div>
        <a href="/">
          <Icon name={arrowIcon}  />
        </a>
      </div>
    </div>
  </div>
  <!-- Experience Details -->
  <div class="text-center leading-tight text-sm">
    <span class="font-normal">{experienceTitle}</span>
    <span class="font-medium">{experience}</span>
  </div>
</div>

---
// COMPONENTS //
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

interface props {
  image: string;
  imageAlt: string;
  name: string;
  position: string;
  employeeSalary: string;
  experience: string;
}

const {
  image = "employee-image.jpg",
  imageAlt = "Employee Image",
  name = "Deven Bhagtani",
  position = "UX Designer",
  employeeSalary = "Rs.10,000",
  experience = "4 Years",
} = Astro.props;
const startingFrom = "Starting from";
const experienceTitle = "Experience: ";
const arrowIcon = "arrow-icon";
---

<div
  class="flex flex-col rounded-3xl pb-2 gap-2 bg-gradient-to-r from-(--blue-500) to-[#8B77F3] md:gap-3 md:pb-3">
  <!-- Employee Details -->
  <div class="bg-n-100 flex flex-col rounded-3xl p-5 gap-4 md:flex-row">
    <!-- Employee Image -->
    <Image
      src={`/images/retainership/${image}`}
      alt={imageAlt}
      width={287}
      height={193}
      class="rounded-2xl w-full md:w-[200px] md:h-[193px]"
    />
    <!-- Employee Content -->
    <div class="flex flex-col gap-8 md:gap-24">
      <!-- Name + Position -->
      <div class="flex flex-col gap-1">
        <!-- Employee Name -->
        <p class="text-n-950 text-xl font-bold leading-tight md:text-2xl">
          {name}
        </p>
        <!-- Employee Position -->
        <p class="text-n-700 text-sm font-medium leading-tight md:text-base">
          {position}
        </p>
      </div>

      <!-- Price Wrapper -->
      <div class="flex justify-between items-center">
        <!-- Price details -->
        <div class="flex flex-col">
          <p class="font-medium text-sm text-n-700 leading-tight md:text-base">
            {startingFrom}
          </p>
          <p class="font-medium text-base text-n-700 leading-tight md:text-lg">
            {employeeSalary}
          </p>
        </div>
        <!-- CTA Icon -->
        <a href="/" aria-label={`View details for ${name}`}>
          <Icon name={arrowIcon} />
        </a>
      </div>
    </div>
  </div>
  <!-- Experience Details -->
  <div class="text-center leading-tight text-sm md:text-base">
    <span class="font-normal">{experienceTitle}</span>
    <span class="font-medium">{experience}</span>
  </div>
</div>

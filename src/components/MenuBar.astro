---
interface MenuItem {
  name: string;
  url: string;
}

const { items = [] }: { items?: MenuItem[] } = Astro.props;
const currentPath = Astro.url.pathname;
---

<nav class="bg-n-100 rounded-4xl px-9 py-4">
  <ul class="flex gap-10">
    {items.map((item: MenuItem) => {
      const isActive = currentPath === item.url;
      return (
        <li class="relative">
          <a
            href={item.url}
            class={`inline-flex items-center relative text-n-950 text-base font-medium transition-colors ${
              isActive ? "text-blue-600" : "hover:text-blue-600"
            }`}
          >
            {item.name}

            {isActive && (
              <span
                class="absolute top-1/2 right-[12px]  -translate-y-1/2 w-[25px] h-[25px] bg-blue-500 rounded-full z-10 opacity-80 pointer-events-none"
              ></span>
            )}
          </a>
        </li>
      );
    })}
  </ul>
</nav>

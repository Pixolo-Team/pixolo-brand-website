---
import { Icon } from "astro-icon/components";

const { cardItems } = Astro.props;
---

<!-- Project Card -->{
  cardItems.map((cardItem: { text: unknown; image: string | null | undefined }) => (
    // Logo Container
    <div class="flex flex-col gap-4">
      <div class="border-n-500 bg-n-100 justify-center rounded-4xl border p-20">
        <img src={cardItem.image} />
      </div>
      {/* Text+Icon */}
      <div class="flex flex-row items-center justify-between">
        {/* Text */}
        <p class="text-xl leading-[1.25] font-medium tracking-tighter lg:text-2xl">
          {cardItem.text}
        </p>
        {/* Next arrow */}
        <div class="h-6 w-6 md:h-7 md:w-7">
          <Icon name="right-arrow" />
        </div>
      </div>
    </div>
  ))
}

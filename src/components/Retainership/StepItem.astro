---
interface props {
  number: string;
  title: string;
  description: string;
  direction: "ltr" | "rtl";
}

const { number, title, description, direction } = Astro.props as props;
---

<!-- Step Item  -->
<div
  class={`flex gap-6 w-full items-center max-w-[327px] md:max-w-3xl lg:max-w-[1424px] md:gap-10 lg:gap-16 ${direction === "rtl" ? "md:flex-row-reverse" : "md:flex-row"}`}
>
  <!-- Step number -->
  <p
    class={`font-normal text-5xl leading-tight text-n-950 grow md:text-7xl lg:text-8xl ${direction === "rtl" ? "md:text-left" : "md:text-right"}`}
  >
    {number}
  </p>

  <!-- Ellipse -->
  <div class="bg-n-700 h-[19px] w-[19px] shrink-0 rounded-full"></div>

  <!-- Step Information -->
  <div
    class="flex max-w-[180px] shrink-0 flex-col gap-3 md:max-w-[335px] md:gap-5 lg:max-w-[639px]"
  >
    <!-- Title -->
    <p
      class={`font-bold text-2xl leading-tight text-n-950 md:text-3xl lg:text-5xl lg:font-medium ${direction === "rtl" ? "md:text-right" : "md:text-left"}`}
    >
      {title}
    </p>

    <!-- Description -->
    <p
      class={`font-normal text-sm leading-tight text-n-950 md:text-base lg:text-2xl ${direction === "rtl" ? "md:text-right" : "md:text-left"}`}
    >
      {description}
    </p>
  </div>
</div>

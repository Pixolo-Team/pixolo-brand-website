---
interface Props {
  tabItems: {
    id: number;
    name: string;
    isActive?: boolean;
  }[];
}

const { tabItems } = Astro.props;
---

<!-- Tab component -->
<div id="tabs-container" class="flex items-center gap-3.5 md:gap-5 lg:gap-6">
  {
    tabItems.map((tabItem) => {
      return (
        // Tabitem
        <button
          data-tab-id={tabItem.id}
          class={`border-n-950 hover:bg-n-950 hover:text-n-100 cursor-pointer rounded-4xl border px-4 py-2.5 ${tabItem.isActive ? "text-n-100 bg-n-950" : "text-n-950 "}`}
        >
          {/* Text */}
          <p class="leading-light text-sm font-normal tracking-normal md:text-lg lg:text-xl">
            {tabItem.name}
          </p>
        </button>
      );
    })
  }
</div>

<script>
  // OTHERS //
  import { addActiveTab } from "@/scripts/industries";

  addActiveTab();
</script>

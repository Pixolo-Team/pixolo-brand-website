---
interface Props {
  tabItems: {
    id: number;
    name: string;
    isActive: boolean;
  }[];
}

const { tabItems } = Astro.props;
---

<!-- Tab component -->
<div class="flex justify-center gap-3.5">
  {
    tabItems.map((tabItem) => {
      return (
        <button
          class={`border-n-950 hover:bg-n-950 hover:text-n-100 cursor-pointer rounded-4xl border px-4 py-2.5 ${tabItem.isActive ? "text-n-100 bg-n-950" : "text-n-950 "}`}
        >
          <p class="leading-light text-sm font-normal tracking-normal">{tabItem.name}</p>
        </button>
      );
    })
  }
</div>

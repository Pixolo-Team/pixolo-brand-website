---
import { Icon } from "astro-icon/components";
---

<!-- Whatsapp Button -->
<div
  class="group flex justify-center items-center w-fit rounded-[61px] p-6 md:py-6 md:px-8 gap-2.5 bg-n-800/20 absolute transition-all duration-300 cursor-pointer"
>
  <!-- Whatsapp Icon -->
  <Icon
    name="whatsapp-logo"
    class="size-8 transition-transform duration-500 ease-in-out"
  />

  <!-- Button Text -->
  <div
    class="hidden group-hover:flex flex-col w-fit gap-0.5 transition-all duration-500 ease-in-out"
  >
    <p class="text-lg font-medium text-n-950 leading-[22px]">Whatsapp</p>
    <p class="text-xs font-medium text-n-950">Let's Connect</p>
  </div>
</div>

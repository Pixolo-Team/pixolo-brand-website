---
// COMPONENTS //
import { Icon } from "astro-icon/components";

interface Props {
  icon: string;
  text?: string;
  backgroundColor: string;
}

const {
  icon = "",
  text = "",
  backgroundColor = "",
} = Astro.props;
---

<!-- Tech Tool Badge Component -->
<div
  class={`flex items-center justify-center p-2.5 md:p-3 lg:p-2.5 gap-1.5 lg:gap-4 rounded-4xl ${backgroundColor} ${text ? "px-3.5 md:px-6 lg:px-7" : "rounded-full"}`}
>
  <!-- Tech Badge Icon -->
  <Icon name={icon} />
  <!-- Tech Badge Text -->
  <p
    class="text-sm md:text-base font-medium lg:text-xl leading-tight text-n-950"
  >
    {text}
  </p>
</div>

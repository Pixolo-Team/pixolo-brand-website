---
import ArrowIcon from "@/icons/right-arrow.svg";

interface Props {
  imageSrc: string;
  category: string;
  date: string;
  title: string;
  author: string;
}

const { imageSrc, category, date, title, author } = Astro.props;
---

<!-- Card Wrapper -->
<div class="bg-n-900 flex flex-col overflow-hidden rounded-3xl">
  <!-- Blog Image -->
  <div class="overflow-hidden">
    <img src={imageSrc} alt={title} class="h-auto w-full object-cover" />
  </div>

  <!-- Blog Content -->
  <div class="flex flex-col gap-5 p-4">
    <!-- Category + Date Row -->
    <div class="flex justify-between">
      <!-- Category Badge -->
      <div class="bg-n-700 rounded-3xl px-4 py-1.5">
        <p class="text-n-50 text-sm leading-tight font-normal tracking-normal sm:text-base">
          {category}
        </p>
      </div>

      <!-- Date with Icon -->
      <div class="flex items-center gap-2">
        <img src="src/icons/calendar.svg" alt="calendar" class="h-5 w-5" />
        <p class="text-n-50 text-sm leading-tight font-normal tracking-normal">
          {date}
        </p>
      </div>
    </div>

    <!-- Title -->
    <p class="text-n-200 text-lg leading-tight font-medium tracking-normal sm:text-2xl lg:text-3xl">
      {title}
    </p>

    <!-- Author + Link Row -->
    <div class="flex items-center justify-between">
      <p class="text-n-400 text-sm leading-tight font-normal tracking-normal sm:text-lg lg:text-xl">
        By: {author}
      </p>

      <!-- Arrow Link -->
      <a href="#">
        <ArrowIcon class="text-n-50 h-7 w-7" />
      </a>
    </div>
  </div>
</div>

---
import { Icon } from "astro-icon/components";

interface Props {
  imageSrc: string;
  category: string;
  date: string;
  title: string;
  author: string;
  href: string;
}

const { imageSrc, category, date, title, author, href } = Astro.props;
---

<!-- Card Wrapper -->
<div class="bg-n-100 hover:bg-n-200 flex flex-auto flex-col overflow-hidden rounded-3xl">
  <!-- Blog Image -->
  <div class="overflow-hidden">
    <img src={imageSrc} alt={title} class="h-auto w-full" loading="lazy" />
  </div>

  <!-- Blog Content -->
  <div class="flex flex-col gap-5 p-4 md:p-5 lg:gap-6 lg:p-6">
    <!-- Category + Date Row -->
    <div class="flex justify-between">
      <!-- Category Badge -->
      <div class="bg-n-300 rounded-3xl px-4 py-1.5">
        <p class="text-n-950 text-sm leading-tight font-normal tracking-normal md:text-base">
          {category}
        </p>
      </div>

      <!-- Date with Icon -->
      <div class="flex items-center gap-2">
        <Icon name="calendar" class="h-5 w-5" />
        <p class="text-n-950 text-sm leading-tight font-normal tracking-normal">
          {date}
        </p>
      </div>
    </div>

    <!-- Title -->
    <p class="text-n-800 text-lg leading-tight font-medium tracking-normal md:text-2xl lg:text-3xl">
      {title}
    </p>

    <!-- Author + Link Row -->
    <div class="flex items-center justify-between">
      <p class="text-n-600 text-sm leading-tight font-normal tracking-normal md:text-lg lg:text-xl">
        By: {author}
      </p>

      <!-- Arrow Link -->
      <a href={href} aria-label={`Read more about ${title}`}>
        <Icon name="right-arrow" class="h-7 w-7" />
      </a>
    </div>
  </div>
</div>

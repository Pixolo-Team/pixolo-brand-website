---
// COMPONENTS //
import { Icon } from "astro-icon/components";

// OTHERS //
import ToolBadge from "../ToolBadge.astro";
import BottomCTA from "../BottomCTA.astro";

export interface props {
  socialLinks: string[];
  headerIcon: string;
  headerText: string;
  toolBadgeText: string;
  logoIcon: string;
  logoMessage: string;
  bottomIcon: string;
  bottomText: string;
}

const {
  socialLinks = ["instagram", "linkedin", "instagram", "linkedin"],
  headerIcon = "logo-only",
  headerText = "Every line of code we write carries our story of curiosity, courage, and a shared laugh between deadlines.",
  toolBadgeText = "Make the Logo Bigger",
  logoIcon = "text-only-logo",
  logoMessage = "We code better than we socialize. Itâ€™s your move.",
  bottomIcon = "copyright",
  bottomText = "2025",
} = Astro.props;
---

<!-- Footer Container -->
<div class="flex flex-col px-6 pt-24 pb-8 bg-n-50 items-center justify-center">
  <footer>
    <!-- Header Section -->
    <div class="flex flex-col gap-4">
      <Icon name={headerIcon} class="w-11 h-11" />
      <p class="font-normal text-2xl leading-tight tracking-[-0.04em]">
        {headerText}
      </p>
    </div>

    <!-- Logo Cta Wrap -->

    <!-- Container -->
    <div class="flex flex-col pt-32 gap-8 ">
      <!-- Tool Badge -->
      <div class="flex justify-end">
        <div class="rotate-[-9.53deg] ">
          <ToolBadge text={toolBadgeText} />
        </div>
      </div>
      <!-- Logo with text only and message -->
      <div class="flex flex-col gap-6">
        <Icon name={logoIcon} class="w-[327px] h-[111px] self-center" />
        <p
          class="text-base font-normal leading-[1.25em] self-center text-center">
          {logoMessage}
        </p>
      </div>

      <!-- Bottom CTA -->
       <div class="self-center">
      <BottomCTA />
      </div>
    </div>

    <!-- Bottom Section Wrap -->
    <div class="flex flex-col gap-3.5">
      <div class="flex pt-6 gap-6 justify-center">
        {
          socialLinks.map((link: string) => (
            <div class="flex flex-col w-10 rounded-[34px] h-10 p-2.5 border border-n-500 items-center justify-center">
              <Icon name={link} />
            </div>
          ))
        }
      </div>
      <!-- Copyright -->
      <div class="flex gap-1 justify-center">
        <Icon name={bottomIcon} class="self-center" />
        <span>{bottomText}</span>
      </div>
    </div>
  </footer>
</div>

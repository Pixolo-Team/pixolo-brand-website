---
// COMPONENTS //
import { Icon } from "astro-icon/components";

// OTHERS //
import ToolBadge from "../ToolBadge.astro";
import BottomCTA from "../BottomCTA.astro";

export interface props {
  socialLinks: string[];
  headerIcon: string;
  headerText: string;
  toolBadgeText: string;
  logoIcon: string;
  logoMessage: string;
  bottomIcon: string;
  bottomText: string;
}

const {
  socialLinks = ["instagram", "linkedin"],
  headerIcon = "logo-only",
  headerText = "Every line of code we write carries our story of curiosity, courage, and a shared laugh between deadlines.",
  toolBadgeText = "Make the Logo Bigger",
  logoIcon = "text-only-logo",
  logoMessage = "We code better than we socialize. Itâ€™s your move.",
  bottomIcon = "copyright",
  bottomText = "2025",
} = Astro.props;
---

<!-- Footer Container -->
<div>
  <footer>
    <!-- Header Section -->
    <div>
      <Icon name={headerIcon} />
      <p>
        {headerText}
      </p>
    </div>

    <!-- Logo Cta Wrap -->

    <!-- Container -->
    <div>
      <!-- Tool Badge -->
      <ToolBadge text={toolBadgeText} />

      <!-- Logo with text only and message -->
      <div>
        <Icon name={logoIcon} />
        <p>{logoMessage}</p>
      </div>

      <!-- Bottom CTA -->
      <BottomCTA />
    </div>

    <!-- Bottom Section Wrap -->
    <div>
      <div>
        {
          socialLinks.map((link: string) => (
            <div>
              {" "}
              <Icon name={link} />
            </div>
          ))
        }
      </div>
      <div>
        <Icon name={bottomIcon} />
        <span>{bottomText}</span>
      </div>
    </div>
  </footer>
</div>

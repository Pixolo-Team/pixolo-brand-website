---
// OTHERS //
import Badge from "./Badge.astro";

interface Props {
  imageName: string;
  title: string;
  tags: string[];
}

const {
  imageName = "service-image",
  title = "Design",
  tags = ["Website", "Mobile", "UI", "App"],
} = Astro.props as Props;
---

<!-- Service Item -->
<div class="flex flex-col gap-4 md:gap-6 lg:gap-7 w-full 2xl:max-w-[500px]">
  <!-- Service Image -->
  <div
    class="flex justify-center items-center rounded-4xl py-12 md:py-20 md:px-16 lg:py-28 lg:px-24 bg-blue-200 w-full"
  >
    <img src={`/images/${imageName}.png`} alt={title} class="w-[288px]" />
  </div>

  <!-- Content -->
  <div class="flex flex-col gap-3 md:gap-4 lg:gap-6">
    <!-- Title -->
    <p
      class="text-2xl md:text-4xl lg:text-5xl leading-tight font-normal text-n-950"
    >
      {title}
    </p>

    <!-- Tool Badges -->
    <div class="flex flex-wrap gap-2.5 md:gap-4 lg:gap-5">
      <!-- Iterating Over A String Array - tags -->
      {tags.map((tag) => <Badge badgeText={tag} />)}
    </div>
  </div>
</div>

---
// OTHERS //
import Badge from "./Badge.astro";
import { Image } from "astro:assets";

interface Props {
  imageName: string;
  title: string;
  tags: string[];
}

const {
  imageName = "service-image",
  title = "Design",
  tags = ["Website", "Mobile", "UI", "App"],
} = Astro.props as Props;
---

<!-- Service Item -->
<div class="flex w-full cursor-pointer flex-col gap-4 md:gap-6 lg:gap-7 2xl:max-w-[500px]">
  <!-- Service Image -->
  <div
    class="flex w-full items-center justify-center overflow-hidden rounded-4xl bg-blue-200 py-12 md:px-16 md:py-20 lg:px-24 lg:py-28"
  >
    <Image
      src={`/images/${imageName}.png`}
      alt={title}
      width={288}
      height={288}
      class="w-[288px] transition-transform duration-500 ease-in-out hover:scale-[1.3]"
      loading="lazy"
      decoding="async"
    />
  </div>

  <!-- Content -->
  <div class="anim-fade-in-up flex flex-col gap-3 transition-all duration-300 md:gap-4 lg:gap-6">
    <!-- Title -->
    <p class="text-n-950 text-2xl leading-tight font-normal md:text-4xl lg:text-5xl">
      {title}
    </p>

    <!-- Tool Badges -->
    <div class="flex flex-wrap gap-2.5 md:gap-4 lg:gap-5">
      <!-- Iterating Over A String Array - tags -->
      {tags.map((tag) => <Badge badgeText={tag} />)}
    </div>
  </div>
</div>

---
// OTHERS //
import Badge from "./Badge.astro";

    const {
    imageName= "service-image",
    title= "Design",
    tags= ["Website", "Mobile", "UI", "App"]
    } = Astro.props
---

<!-- Service Item -->
<div class="flex flex-col gap-4 md:gap-6 lg:gap-7 w-max lg:max-w-500">

    <!-- Service Image -->
     <div class="flex justify-center items-center rounded-4xl py-12 md:py-20 md:px-16 lg:py-28 lg:px-24 bg-blue-200">
        <img src= {`/images/${imageName}.png`} alt= {title} class="w-[288px]">
    </div>

    <!-- Content -->
    <div class="flex flex-col gap-3 md:gap-4 lg:gap-6">

        <!-- Title -->
        <p class="text-2xl md:text-4xl lg:text-5xl leading-tight font-normal text-n-950">
            {title}
        </p>

        <!-- Tool Badges -->
        <div class="flex gap-2.5 md:gap-4 lg:gap-5">

            <!-- Iterating Over A String Array - tags -->
            {tags.map((tag)=>(
                <Badge badgeText = {tag} />
            ))}
        </div>

    </div>
</div>
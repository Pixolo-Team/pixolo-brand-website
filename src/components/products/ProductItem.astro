---
// COMPONENTS //
import { Icon } from "astro-icon/components";
import Image from "astro/components/Image.astro";

interface Props {
  name: string;
  logo: string;
  thumbnail: string;
  description: string;
  href: string;
}

const { name, logo, thumbnail, description, href } = Astro.props as Props;
---

<!-- Product Item -->
<div
  class="border-n-950 flex w-full flex-col gap-3 border-b-[0.4px] py-7 md:gap-3.5 md:border-b-[0.6px] lg:flex-row lg:justify-between lg:gap-12 lg:border-b-[0.8px]"
>
  <!-- Logo Container -->
  <div class="flex gap-2.5 lg:w-2/5">
    <Image
      src={`/images/products/${logo}`}
      alt={`${name} logo`}
      width={180}
      height={63}
      class="object-contain md:h-[88px] md:w-[250px]"
    />
  </div>

  <!-- Product Image -->
  <Image
    src={`/images/products/${thumbnail}`}
    alt={`${name} thumbnail`}
    width={327}
    height={140}
    class="h-[140px] w-full rounded-[25px] object-cover md:h-[209px] lg:hidden"
  />

  <!-- Content -->
  <div class="flex w-full items-center justify-center gap-6 md:gap-16 lg:w-3/5 lg:gap-16">
    <!-- Description -->
    <p class="text-n-700 text-xs leading-normal font-normal md:text-base">
      {description}
    </p>

    <!-- Link for more information -->
    <a
      href={href}
      class="border-n-950 flex size-12 shrink-0 items-center justify-center self-center rounded-full border from-(--blue-500) to-[#8B77F3] hover:border-none hover:bg-gradient-to-r md:size-20"
      aria-label="View more information"
    >
      <Icon name="external-link-icon" class="size-[18px] md:size-[30px]" />
    </a>
  </div>
</div>

---
// COMPONENTS //
import { Image } from "astro:assets";

// Define props
interface Props {
  variant?: "default" | "light" | "dark";
  classes?: string;
  width?: number;
  height?: number;
}

const { variant = "default", width = 120, height = 120, classes = "" } = Astro.props;

const logos = {
  default: "/brand-logo/default.png",
  light: "/brand-logo/white.png",
  dark: "/brand-logo/dark.png",
};

const selectedLogo = logos[variant];
---

<!-- Brand Logo -->
<Image
  src={selectedLogo}
  alt="Pixolo Logo"
  width={width}
  height={height}
  class={classes}
  loading={"lazy"}
/>

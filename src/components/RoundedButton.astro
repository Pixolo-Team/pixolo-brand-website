---
import "../styles/global.css"
const { buttonText, leftIcon, rightIcon } = Astro.props
---


    <!-- Rounded Button -->
     <button class="flex gap-1 px-5 py-3 rounded-[33px] text-n-100 bg-n-950 md:px-6 md:py-4 md:gap-2 lg:py-4 lg:px-7 lg:gap-2">
        <!--Left icon of Rounded Button  -->
        {leftIcon && <img src={`/icons/${rightIcon}.svg`} alt={`${leftIcon} `} />}

        <!-- Rounded Button Text -->
        <p>
            {buttonText}
        </p>
        
        <!-- Right Icon Of Rounded Button -->
        {rightIcon && <img src={`/icons/${rightIcon}.svg`} alt={`${rightIcon} `} />}
     </button>


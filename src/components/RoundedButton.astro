---
// STYLES //
import "../styles/global.css";

// COMPONENTS //
import { Icon } from "astro-icon/components";

const { buttonText, leftIcon, rightIcon } = Astro.props;
---

<!-- Rounded Button -->
<button
  class="flex gap-1.5 lg:gap-2 px-5 py-3 rounded-4xl text-n-100 font-medium bg-n-950 md:px-6 md:py-3.5 lg:py-4 lg:px-7"
>
  <!--Left icon of Rounded Button  -->
  {
    leftIcon && (
      <Icon name={leftIcon} class="lg:size-6 size-4"/>
    )
  }

  <!-- Rounded Button Text -->
  <p>
    {buttonText}
  </p>

  <!-- Right Icon Of Rounded Button -->
  {
    rightIcon && (
      <Icon name={rightIcon} class="size-4 lg:size-6"/>
    )
  }
</button>

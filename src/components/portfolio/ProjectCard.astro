---
interface Props {
  backgroundColor: string;
  image: string;
  logo: string;
  title: string;
  subtitle: string;
  chips: Array<string>;
}

// COMPONENTS
import RoundedButton from "../RoundedButton.astro";
import Badge from "./Badge.astro";

// PROPS
const { backgroundColor, image, logo, title, subtitle, chips } = Astro.props;
---

<!-- Main Project Tile -->
<div class=`rounded-[42px] ${backgroundColor}`>
  <!-- Project Content -->
  <div class="flex flex-col gap-6 px-5 py-6">
    <!-- Logo -->
    <div class="h-[99.78px] w-[287px] content-center justify-start">
      <img src={logo} alt="logo" class="top-[13.19px] h-[109.72px]" />
    </div>

    <!-- Project Details Wrapper -->
    <div class="flex flex-col gap-5">
      <!-- Project Details -->
      <div class="flex flex-col gap-5">
        <!-- Chip Wrapper -->
        <div class="flex flex-wrap gap-2">
          <!-- Portfolio Chip -->
          {chips?.map((chipText: string) => <Badge badgeText={chipText} />)}
        </div>

        <!-- Title Details -->
        <div class="text-n-50 flex flex-col gap-4">
          <!-- Title -->
          <p class="text-2xl leading-tight font-semibold">{title}</p>

          <!-- Subtitle -->
          <p class="text-sm leading-tight font-normal">{subtitle}</p>
        </div>
      </div>

      <!-- Rounded Button -->
      <RoundedButton buttonText={"View Case Study"} leftIcon={""} rightIcon={""} />
    </div>
  </div>

  <!-- Image -->
  <div class="hidden">
    <img src={image} alt="image" class="h-[644.41px] w-[617px]" />
  </div>
</div>

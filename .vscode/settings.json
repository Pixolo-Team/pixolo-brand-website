{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  "files.associations": {
    "*.astro": "astro"
  },

  "typescript.tsdk": "node_modules/typescript/lib",

  // Tailwind class sorting from Prettier plugin
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // In case someone installs other formatters
  "[astro]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cSpell.words": ["retainership", "ceat", "skorost", "yumm", "zizo"]
}
